<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="sql.company">
	<!-- 리절트 맵 정의 -->
 	<resultMap id="companyResult" type="companyVO">
		<result property="cmp_id" column="cmp_id" />
	
		<result property="name" column="name" />
		<result property="pwd" column="pwd" />
		<result property="zipcode" column="zipcode" />
		<result property="addr" column="addr" />
		<result property="addr_detail" column="addr_detail" />
		<result property="office_no1" column="office_no1" />
		<result property="office_no2" column="office_no2" />
		<result property="office_no3" column="office_no3" />
		<result property="cmp_email" column="cmp_email" />
		<result property="site" column="site" />
		<result property="service" column="service" />
		
	</resultMap>
	
	<select id="login" resultType="companyVO"
		parameterType="java.util.Map">
			select * from company 
			 where cmp_id=#{cmp_id}
			 and pwd=#{pwd}	
	</select>

<select id="selectOverlappedID" parameterType="String"
		resultType="String">
		select decode(count(*),1, 'true', 0, 'false')
		from company
		where cmp_id = #{cmp_id}
	</select>
	
	
	
	

	<insert id="insertNewCompany" parameterType="companyVO">
		insert into company(cmp_id,name,pwd,zipcode,addr,addr_detail,office_no1,office_no2,office_no3,cmp_email,site,service)
							 values(#{cmp_id},
									#{name},
                                 	#{pwd},
                                 	#{zipcode},
                                 	#{addr},
                                 	#{addr_detail},
                                    #{office_no1},
                                    #{office_no2},
                                    #{office_no3},
                                    #{cmp_email},
                                    #{site},
                                    #{service})
                                    
                                  
                                    
                                    
                            </insert>
	<select id="selectList" parameterType="companyVO" resultType="com.garo.www.company.vo.CompanyVO">
		select cmp_id, name, pwd, zipcode, addr, addr_detail, office_no1, office_no2, office_no3, cmp_eamil, site, service from company order by cmp_id
	</select>
	
	<select id="selectList_search" parameterType="companyVO" resultType="com.garo.www.company.vo.CompanyVO">
		select * from company 
		where service = #{service} and addr Like '%'||#{addr}||'%' and name Like '%' || #{name}|| '%' 
		order by cmp_id 
	</select>
	
</mapper>        
                             
